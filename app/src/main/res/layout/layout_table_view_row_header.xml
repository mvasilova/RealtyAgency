<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerRow"
    android:layout_width="@dimen/table_row_width"
    android:layout_height="@dimen/table_row_height">

    <TextView
        android:id="@+id/tvRowHeader"
        style="@style/Text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/default_margin_4"
        tools:text="Row Data" />

    <View
        android:layout_width="@dimen/view_height_2"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@color/colorLightView" />

    <View
        android:id="@+id/viewTopRow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_2"
        android:layout_gravity="top"
        android:background="@color/colorLightView"
        android:visibility="gone" />
</FrameLayout>