<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/default_margin_16">

    <TextView
        android:id="@+id/tvCost"
        style="@style/Text.Bold.20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin_4"
        tools:text="10000000" />

    <TextView
        android:id="@+id/tvName"
        style="@style/Text.16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Example" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCall"
        style="@style/MaterialButton"
        android:layout_marginTop="@dimen/default_margin_16"
        android:text="@string/btn_call" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddComparison"
        style="@style/MaterialButton.Accent"
        android:text="@string/btn_add_comparison" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_1"
        android:layout_marginTop="@dimen/default_margin_16"
        android:layout_marginBottom="@dimen/default_margin_16"
        android:background="@color/colorLightView" />

    <TextView
        android:id="@+id/tvDescription"
        style="@style/Text.16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/text_line_spacing"
        tools:text="Задача организации, в особенности же новая модель организационной деятельности способствует подготовки и реализации соответствующий условий активизации. Идейные соображения высшего порядка, а также начало повседневной работы по формированию позиции способствует подготовки и реализации дальнейших направлений развития. Таким образом укрепление и развитие структуры влечет за собой процесс внедрения и модернизации соответствующий условий активизации." />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_1"
        android:layout_marginTop="@dimen/default_margin_16"
        android:background="@color/colorLightView" />

</LinearLayout>