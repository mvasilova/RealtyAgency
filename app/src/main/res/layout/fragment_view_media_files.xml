<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorMediaBackground">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivViewClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:contentDescription="@string/content_close_screen"
        android:foreground="?selectableItemBackgroundBorderless"
        android:padding="@dimen/default_margin_16"
        android:src="@drawable/ic_toolbar_close"
        android:tint="@color/colorWhite" />

    <TextView
        android:id="@+id/tvMediaCount"
        style="@style/Text.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:padding="@dimen/default_margin_16"
        tools:text="1/10" />

</FrameLayout>