<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingStart="@dimen/default_margin_16"
    android:paddingTop="@dimen/default_margin_8"
    android:paddingEnd="@dimen/default_margin_16"
    android:paddingBottom="@dimen/default_margin_8">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFeatureName"
            style="@style/Text.LightHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/label_mark_criticality" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/default_margin_8"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/tvFeatureDescription"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Обращение в HelpDesk" />

    </LinearLayout>

</LinearLayout>