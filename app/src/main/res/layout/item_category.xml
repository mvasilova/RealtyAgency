<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/default_margin_16"
    android:layout_marginTop="@dimen/default_margin_4"
    android:layout_marginEnd="@dimen/default_margin_16"
    android:layout_marginBottom="@dimen/default_margin_4"
    android:foreground="?selectableItemBackgroundBorderless"
    app:cardCornerRadius="@dimen/image_card_radius">

    <TextView
        android:id="@+id/tvCategoryName"
        style="@style/Text.Bold.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/default_margin_16"
        android:textColor="@color/colorAccent"
        tools:text="Дома" />

</androidx.cardview.widget.CardView>